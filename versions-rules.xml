<ruleset
  comparisonMethod="maven"
  xmlns="http://mojo.codehaus.org/versions-maven-plugin/rule/2.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://mojo.codehaus.org/versions-maven-plugin/rule/2.0.0 https://www.mojohaus.org/versions-maven-plugin/xsd/rule-2.0.0.xsd"
>
  <rules>
    <!-- Stay on Jakarta EE Web Profile 10, see https://jakarta.ee/specifications/webprofile/10/ -->
    <!-- Direct -->
    <rule groupId="jakarta.el" artifactId="jakarta.el-api" comparisonMethod="maven">
      <ignoreVersions>
        <ignoreVersion type="regex">.*-(M|RC)[0-9]+</ignoreVersion>
        <ignoreVersion type="regex">6\.[0-9]+.*</ignoreVersion>
      </ignoreVersions>
    </rule>
    <rule groupId="jakarta.platform" artifactId="jakarta.jakartaee-web-api" comparisonMethod="maven">
      <ignoreVersions>
        <ignoreVersion type="regex">.*-(M|RC)[0-9]+</ignoreVersion>
        <ignoreVersion type="regex">11\.[0-9]+.*</ignoreVersion>
      </ignoreVersions>
    </rule>
    <rule groupId="jakarta.servlet" artifactId="jakarta.servlet-api" comparisonMethod="maven">
      <ignoreVersions>
        <ignoreVersion type="regex">.*-(M|RC)[0-9]+</ignoreVersion>
        <ignoreVersion type="regex">6\.1\.[0-9]+.*</ignoreVersion>
      </ignoreVersions>
    </rule>
    <rule groupId="jakarta.servlet.jsp" artifactId="jakarta.servlet.jsp-api" comparisonMethod="maven">
      <ignoreVersions>
        <ignoreVersion type="regex">.*-(M|RC)[0-9]+</ignoreVersion>
        <ignoreVersion type="regex">4\.[0-9]+.*</ignoreVersion>
      </ignoreVersions>
    </rule>
    <rule groupId="jakarta.servlet.jsp.jstl" artifactId="jakarta.servlet.jsp.jstl-api" comparisonMethod="maven">
      <ignoreVersions>
        <ignoreVersion type="regex">.*-(M|RC)[0-9]+</ignoreVersion>
      </ignoreVersions>
    </rule>
    <rule groupId="jakarta.websocket" artifactId="jakarta.websocket-api" comparisonMethod="maven">
      <ignoreVersions>
        <ignoreVersion type="regex">.*-(M|RC)[0-9]+</ignoreVersion>
        <ignoreVersion type="regex">2\.2\.[0-9]+.*</ignoreVersion>
      </ignoreVersions>
    </rule>
    <rule groupId="jakarta.websocket" artifactId="jakarta.websocket-client-api" comparisonMethod="maven">
      <ignoreVersions>
        <ignoreVersion type="regex">.*-(M|RC)[0-9]+</ignoreVersion>
        <ignoreVersion type="regex">2\.2\.[0-9]+.*</ignoreVersion>
      </ignoreVersions>
    </rule>
    <!-- Runtime -->
    <rule groupId="org.glassfish.web" artifactId="jakarta.servlet.jsp.jstl" comparisonMethod="maven">
      <ignoreVersions>
        <ignoreVersion type="regex">.*-(M|RC)[0-9]+</ignoreVersion>
      </ignoreVersions>
    </rule>
  </rules>
</ruleset>
